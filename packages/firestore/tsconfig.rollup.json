{
  "include": ["rollup.*.ts", "scripts/*.ts"],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "lib": ["es2020"],
    "module": "es2020",
    "moduleResolution": "node",
    "outDir": "tmp/rollup",
    "resolveJsonModule": true,
    "strict": true,
    "target": "es2020",
    "typeRoots": [
      "../../node_modules/@types"
    ]
  }
}
